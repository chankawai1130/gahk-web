        <div class="form-group">
            <label>學校名稱(中文)<br>School Name(Chinese):</label>
            <input type="text" name="TSRGCompetition[TSSchoolChiName]" style="width:450pt" onkeyup="value=value.replace(/[^\u4E00-\u9FA5]/g,'')" required>
        </div>

        <div class="form-group">
            <label>聯絡電話<br>Contact Number:</label>
            <input type="text" name="TSRGCompetition[TSPhone]" maxlength="8" pattern="\d{8}" required>

            <label>聯絡電郵<br>Email:</label>
            <input type="email" name="TSRGCompetition[TSEmail]" style="width:300pt" required>
        </div>

        <div class="form-group">
            <label>教練姓名<br>Coach Name:</label>
            <input input="text" name="TSRGCompetition[TSCoachName]" required>

            <label>教練聯絡電話<br>Coach Contact Number:</label>
            <input type="text" name="TSRGCompetition[TSCoachPhone]" maxlength="8" pattern="\d{8}" required>
        </div>

        
        <div class="form-group">
            <label>組別<br>Category:</label>
            <input type="radio" name="TSRGCompetition[TSCategory]" value="預備A,B組" required />
            <label class="form-check-label" for="TSCategory">預備A,B組</label>

            <input type="radio" name="TSRGCompetition[TSCategory]" value="預備C,D組" required />
            <label class="form-check-label" for="TSCategory">預備C,D組</label>

            <input type="radio" name="TSRGCompetition[TSCategory]" value="預備E組" required />
            <label class="form-check-label" for="TSCategory">預備E組</label>

            <input type="radio" name="TSRGCompetition[TSCategory]" value="初級A組" required />
            <label class="form-check-label" for="TSCategory">初級A組</label>

            <input type="radio" name="TSRGCompetition[TSCategory]" value="初級B組" required />
            <label class="form-check-label" for="TSCategory">初級B組</label>

            <input type="radio" name="TSRGCompetition[TSCategory]" value="高級A組" required />
            <label class="form-check-label" for="TSCategory">高級A組</label>

            <input type="radio" name="TSRGCompetition[TSCategory]" value="高級B組" required />
            <label class="form-check-label" for="TSCategory">高級B組</label>
        </div>
    </fieldset>

    <div class="row">
        <div class="card-body col-xl-6" style="border: 0.5px solid #83a70c; border-radius: 5px;">
            <label style="color: #83a70c; font-weight: bold; font-size: 15px;">參加者(1)個人資料 Applicant(1)'s Personal
                Details<span style="font-size:14px;color:red"> * </span></label>
            <div class="form-group col-12">
                <label>中文姓名<br>Name in Chinese:</label>
                <input type="text" name="TSRGCompetition[TSMate1ChiName]" placeholder=" e.g. 陳大文" onkeyup="value=value.replace(/[^\u4E00-\u9FA5]/g,'')" required>

                <label>英文姓名<br>Name in English:</label>
                <input type="text" name="TSRGCompetition[TSMate1EngName]" placeholder=" e.g. Chan Tai Man" onkeyup="value=value.replace(/[^\a-\z\A-\Z]/g,'')" required>

                <label>身分證號碼<br>ID Card Number:</label>
                <input type="text" name="TSRGCompetition[TSMate1IDNo]" placeholder=" A123456(7)" required>

                <label>出生日期<br>Date of Birth (dd/mm/yyyy):</label>
                <input type="date" name="TSRGCompetition[TSMate1Date]" required>
            </div>
        </div>

        <div class="card-body col-xl-6" style="border: 0.5px solid #83a70c; border-radius: 5px;">
            <legend style="color: #83a70c; font-weight: bold; font-size: 15px;">參加者(2)個人資料 Applicant(2)'s Personal
                Details<span style="font-size:14px;color:red"> * </span></legend>
            <div class="form-group col-12">
                <label>中文姓名<br>Name in Chinese:</label>
                <input type="text" name="TSRGCompetition[TSMate2ChiName]" placeholder=" e.g. 陳大文" onkeyup="value=value.replace(/[^\u4E00-\u9FA5]/g,'')" required>

                <label>英文姓名<br>Name in English:</label>
                <input type="text" name="TSRGCompetition[TSMate2EngName]" placeholder=" e.g. Chan Tai Man" onkeyup="value=value.replace(/[^\a-\z\A-\Z]/g,'')" required>

                <label>身分證號碼<br>ID Card Number:</label>
                <input type="text" name="TSRGCompetition[TSMate2IDNo]" placeholder=" A123456(7)" required>

                <label>出生日期<br>Date of Birth (dd/mm/yyyy):</label>
                <input type="date" name="TSRGCompetition[TSMate2Date]" required>
            </div>
        </div>


        <div class="card-body col-xl-6" style="border: 0.5px solid #83a70c; border-radius: 5px;">
            <legend style="color: #83a70c; font-weight: bold; font-size: 15px;">參加者(3)個人資料 Applicant(3)'s Personal
                Details<span style="font-size:14px;color:red"> * </span></legend>
            <div class="form-group col-12">
                <label>中文姓名<br>Name in Chinese:</label>
                <input type="text" name="TSRGCompetition[TSMate3ChiName]" placeholder=" e.g. 陳大文" onkeyup="value=value.replace(/[^\u4E00-\u9FA5]/g,'')" required>

                <label>英文姓名<br>Name in English:</label>
                <input type="text" name="TSRGCompetition[TSMate3EngName]" placeholder=" e.g. Chan Tai Man" onkeyup="value=value.replace(/[^\a-\z\A-\Z]/g,'')" required>

                <label>身分證號碼<br>ID Card Number:</label>
                <input type="text" name="TSRGCompetition[TSMate3IDNo]" placeholder=" A123456(7)" required>

                <label>出生日期<br>Date of Birth (dd/mm/yyyy):</label>
                <input type="date" name="TSRGCompetition[TSMate3Date]" required>
            </div>
        </div>

        <div class="card-body col-xl-6" style="border: 0.5px solid #83a70c; border-radius: 5px;">
            <legend style="color: #83a70c; font-weight: bold; font-size: 15px;">參加者(4)個人資料 Applicant(4)'s Personal
                Details<span style="font-size:14px;color:red"> * </span></legend>
            <div class="form-group col-12">
                <label>中文姓名<br>Name in Chinese:</label>
                <input type="text" name="TSRGCompetition[TSMate4ChiName]" placeholder=" e.g. 陳大文" onkeyup="value=value.replace(/[^\u4E00-\u9FA5]/g,'')" required>

                <label>英文姓名<br>Name in English:</label>
                <input type="text" name="TSRGCompetition[TSMate4EngName]" placeholder=" e.g. Chan Tai Man" onkeyup="value=value.replace(/[^\a-\z\A-\Z]/g,'')" required>

                <label>身分證號碼<br>ID Card Number:</label>
                <input type="text" name="TSRGCompetition[TSMate4IDNo]" placeholder=" A123456(7)" required>

